---
import LogPreview from "@/components/content/LogPreview";
import PostImageLoader from "@/components/content/PostImageLoader.astro";
import StarLayout from "@/layouts/StarLayout.astro";
import { getLogs } from "@/utils/server/content";

const logs = await getLogs();

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Home",
      item: Astro.site,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "Dev Log",
      item: new URL("/dev-log/", Astro.site).href,
    },
  ],
};
---

<StarLayout
  title="Dev-Blog"
  description="Trying to get my blog started so future historians can have my genius thoughts preserved for eternity /s"
>
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(breadcrumbSchema)}
  />
  <section>
    <div class="mx-auto max-w-screen-xl px-4 py-8 lg:px-6 lg:py-16">
      <div class="mx-auto mb-8 max-w-screen-sm text-center lg:mb-16">
        <h2
          class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-400 lg:text-4xl"
        >
          dev log
        </h2>
        <p class="l font-light text-gray-500 sm:text-xl">
          weekly summary of what i've been working on
        </p>
      </div>
      <div class="grid gap-6 lg:grid-cols-2 p-4">
        {
          logs.map((log) => (
            <div class="col-span-2 lg:col-span-1 animate-fade-in">
              <LogPreview log={log} client:idle>
                {log.data.image && log.data.image.trim() !== "" && (
                  <div
                    slot="image"
                    class="absolute inset-0 overflow-hidden rounded-lg pointer-events-none"
                  >
                    <div class="absolute inset-0 bg-gradient-to-br from-black/60 via-black/40 to-transparent dark:from-black/70 dark:via-black/50" />
                    <PostImageLoader
                      className="h-full w-full object-cover"
                      imagePath={log.data.image}
                      altText={log.data.title}
                    />
                  </div>
                )}
              </LogPreview>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</StarLayout>
