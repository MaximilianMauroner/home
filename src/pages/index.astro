---
import { getBlogs, getLogs, getSnacks } from "@/utils/server/content";
import Homepage from "../components/Homepage";
import StarLayout from "@/layouts/StarLayout.astro";
const blogs = await getBlogs();
const logs = await getLogs();
const snacks = await getSnacks();
---

<StarLayout
  title="Maximilian Mauroner"
  description="Just a dev sharing cool stuff: code snippets that work, dev stories that might help, and random tech tools I think are neat. Nothing fancy, just things I find interesting in the world of programming."
>
  <h1 class="sr-only">Maximilian Mauroner</h1>
  <Homepage blogs={blogs} logs={logs} snacks={snacks} client:load />
</StarLayout>
