---
import TagView from "@/components/TagView";
import StarLayout from "@/layouts/StarLayout.astro";
import { getBlogs, getLogs, getSnacks, getTags } from "@/utils/server/content";

interface Props {
  tag: string;
}

const { tag } = Astro.params;

const blogs = await getBlogs();
const logs = await getLogs();
const snacks = await getSnacks();

const tags = getTags(blogs, logs, snacks);

export async function getStaticPaths() {
  const blogs = await getBlogs();
  const logs = await getLogs();
  const snacks = await getSnacks();
  const tags = getTags(blogs, logs, snacks);
  const allTagNames = tags.keys();
  return [...allTagNames].map((tag) => ({ params: { tag } }));
}
---

<StarLayout title={tag} description={tag}>
  <TagView
    tags={tags}
    blogs={blogs}
    logs={logs}
    snacks={snacks}
    preSelectedTag={tag}
    client:load
  />
</StarLayout>
