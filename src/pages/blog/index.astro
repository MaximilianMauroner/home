---
import BlogPreview from "@/components/content/BlogPreview";
import PostImageLoader from "@/components/content/PostImageLoader.astro";
import StarLayout from "@/layouts/StarLayout.astro";
import { getBlogs } from "@/utils/server/content";

const blogs = await getBlogs();

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Home",
      item: Astro.site,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "Blog",
      item: `${Astro.site}/blog/`,
    },
  ],
};
---

<StarLayout
  title="Blog"
  description="trying to get my blog started so future historians can have my genius thoughts preserved for eternity /s"
>
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(breadcrumbSchema)}
  />
  <section>
    <div class="mx-auto max-w-screen-xl px-4 py-8 lg:px-6 lg:py-16">
      <div class="mx-auto mb-8 max-w-screen-sm text-center lg:mb-16">
        <h2
          class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-400 lg:text-4xl"
        >
          blog
        </h2>
        <p class="l font-light text-gray-500 sm:text-xl">
          trying to get my blog started so future historians can have my genius
          thoughts preserved for eternity /s
        </p>
      </div>
      <div class="grid gap-6 md:gap-8 lg:grid-cols-2">
        {
          blogs.map((blog, index) => (
            <div
              class="col-span-2 lg:col-span-1 animate-fade-in"
              style={`animation-delay: ${index * 50}ms;`}
            >
              <BlogPreview blog={blog} client:idle>
                {blog.data.image && blog.data.image.trim() !== "" && (
                  <div slot="image" class="absolute inset-0 overflow-hidden">
                    <PostImageLoader
                      className="h-full w-full object-cover"
                      imagePath={blog.data.image}
                      altText={blog.data.title}
                    />
                  </div>
                )}
              </BlogPreview>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</StarLayout>
