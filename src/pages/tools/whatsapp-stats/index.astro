---
export const title = "WhatsApp Stats";
export const description = "A tool to visualize your WhatsApp chat habits";
import WhatsappStats from "@/components/tools/WhatsappStats";
import DefaultLayout from "@/layouts/DefaultLayout.astro";
---

<DefaultLayout title={title} description={description}>
  <section>
    <div class="mx-auto max-w-screen-xl px-2 md:px-4 md:py-8 lg:px-6 lg:py-16">
      <div class="space-y-4">
        <div class="flex flex-col space-y-2 mb-4">
          <h1 class="text-3xl font-bold tracking-tight">WhatsApp Stats</h1>
          <p class="text-muted-foreground">
            Upload your WhatsApp chat export to analyze your messaging patterns
          </p>
          <p class="text-sm text-muted-foreground">
            Your privacy is important. All data is processed locally on your
            device and stays in your browser. This website does not collect or
            store any of your chat data.
          </p>
        </div>
        <WhatsappStats client:load />
      </div>
    </div>
  </section>
</DefaultLayout>
